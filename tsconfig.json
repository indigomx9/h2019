{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": ["dom", "esnext.asynciterable"],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}

